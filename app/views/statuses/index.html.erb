<div class="row">
  <h1>All of the statuses</h1>
  <hr>

  <%= link_to "Post a New Status", new_status_path, class: "button" %>

  <% @statuses.each do |status| %>
  <div class="status">
    <strong><%= status.user.full_name %></strong>
    <div class="row">
      <div class="small-1 large-1 columns"><%= image_tag status.user.gravatar_url %></div>
      <div class="small-11 large-11 columns">
        <p><%= status.content %></p>
      </div>
    </div>
    <div class="row">
      <div class="meta columns">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <span class="admin">
          | <%= link_to "Edit", edit_status_path(status) %> |
          <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %>
        </span>
      </div>
    </div>
  </div>
  <% end %>

</div>